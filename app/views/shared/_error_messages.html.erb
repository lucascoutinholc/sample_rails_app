<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulário contém <%= pluralize(@user.errors.count, "erro") %>
    </div>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>